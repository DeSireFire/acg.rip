<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/v2dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorFront"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:maxLines="3"
                    android:minLines="3"
                    android:padding="@dimen/v4dp"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/v12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v1dp"
                    android:background="@color/colorBackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/v4dp">

                    <TextView
                        android:id="@+id/publisher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/v10sp" />

                    <TextView
                        android:id="@+id/releaseTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorSubtitle"
                        android:textSize="@dimen/v10sp" />

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorSubtitle"
                        android:textSize="@dimen/v10sp" />

                    <TextView
                        android:id="@+id/link"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorSubtitle"
                        android:textSize="@dimen/v10sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/open"
                android:layout_width="@dimen/v36dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/v2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="@string/open"
                android:textSize="@dimen/v12sp" />

            <Button
                android:id="@+id/share"
                android:layout_width="@dimen/v36dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/v2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="@string/share"
                android:textSize="@dimen/v12sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>