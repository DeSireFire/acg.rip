<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/v8dp"
        android:layout_height="@dimen/v16dp"
        android:background="@drawable/bg_right_circle" />

    <TextView
        android:id="@+id/text_view_week"
        android:layout_width="@dimen/v48dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/v16sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/v2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="@dimen/v8dp"
            android:layout_height="@dimen/v8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle" />

    </FrameLayout>

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/flow_layout_fans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/v8dp"
        android:layout_marginEnd="@dimen/v8dp"
        android:layout_marginLeft="@dimen/v8dp"
        android:layout_marginRight="@dimen/v8dp"
        android:layout_marginStart="@dimen/v8dp"
        android:layout_marginTop="@dimen/v8dp"
        android:layout_weight="1"
        android:background="@drawable/bg_fans_default"
        app:flChildSpacing="@dimen/v8dp"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="@dimen/v8dp" />
</LinearLayout>